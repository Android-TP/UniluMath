<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/unilublur"
            android:clipToPadding="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="719dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:elevation="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal"
                        android:elevation="6dp"
                        android:gravity="center"
                        android:text="connexion"
                        android:textColor="#FFFFFF"
                        android:textSize="36sp"
                        android:textStyle="bold|italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#99090000"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editTextPhone"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"

                            android:ems="10"
                            android:gravity="center|center_horizontal"
                            android:hint="TÃ©lephone"
                            android:inputType="phone"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#B1AFAF"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editTextTextPassword"
                            android:layout_width="300dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_horizontal"

                            android:ems="10"
                            android:gravity="center"
                            android:hint="mot de passe"
                            android:inputType="textPassword"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#9F9E9E"
                            android:textStyle="bold" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/connect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bouton_rond"
                        android:elevation="12dp"
                        android:text="connecter" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>